{{!-- boton para agregar el carrito --}}

<div>
    <h1>Welcome</h1>
    <h2>List of products con boton para borrar</h2>
    <a href="/carts/649b4ac47a68a0b4de95045a"><button>Go to my Cart</button></a>
    <ul id="products">
        {{#each products}}
         <div class=productCard >
            <h4>id {{this._id}} - {{this.title}}</h4>
            <p>Code: {{this.code}}</p>
            <p>Price: ${{this.price}}</p>
            <p>Stock: {{this.stock}}pz</p>
            <p>Category: {{this.category}}</p>
            <button id="addButton" onclick="addToCart('{{this._id}}')">Agregar al carrito</button>
        </div>  
        {{/each}}
    </ul>
    {{#if hasPrevPage}}
    <a href="/products/?page={{prevPage}}"><button>Anterior</button></a>
    {{/if}}

    {{page}}
    
     {{#if hasNextPage}}
    <a href="products/?page={{nextPage}}"><button>Siguiente</button></a>
    {{/if}}
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/cart.js"></script>